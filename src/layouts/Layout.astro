---
interface Props {
  title?: string
}

const { title = 'Feliç 23, Andrius!' } = Astro.props
---

<!doctype html>
<html lang="ca">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Una web que no vas demanar. Però ací està." />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-[--color-bg] text-[--color-text] overflow-x-hidden">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
